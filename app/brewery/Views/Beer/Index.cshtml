@model IEnumerable<ResourcesLibrary.Models.Beer>

@{
    ViewBag.Title = "Beer";
    string currency = "UAH";
}

<h2>Beer menu</h2>

<div>
    <div>
        <h3>Beer list:</h3>
    </div>
    <div>
        @{
            foreach (var beerItem in Model)
            {
            <div>
                <hr />
                <p><b>Name: </b></p>
                <p>@beerItem.Name</p>
                <br />
                <p><b>Price: </b></p>
                <p>@beerItem.Price @currency.</p>
                <a href="/Beer/GetItem/@beerItem.Id">View more about @beerItem.Name</a>
                <hr />
            </div>
            }
        }
    </div>
</div>